<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="form-devise">

        <h2>Définir le rôle de <%= set_fullname(@user) %> au sein du restaurant <%= @restaurant.name %></h2>

        <%= simple_form_for(@profile, url: restaurant_profiles_path(@restaurant)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.hidden_field :user_id, :value => @user.id %>
            <%= f.input :role, collection: ["Profil non autorisé", "Profil admin", "Profil cuisine", "Profil salle"], required: true, autofocus: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Définir le rôle" %>
          </div>

        <% end %>

        <h4 class="text-center" ><%= link_to "Retour", :back %></h4>

      </div>
    </div>
  </div>
</div>
