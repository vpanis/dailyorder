<div class="container">

  <div class="box">

    <% if !current_user.restaurants.first.nil? %>

      <h2 class="text-center">Mes restaurants</h2>

    <% end %>

    <div class="text-center btn-order">
      <%= link_to "Ajouter un restaurant", new_restaurant_path, class: "btn btn-success" %>
    </div>

    <% if @restaurants.first.nil? %>

      <h2 class="text-center">Aucun restaurant rÃ©pertoriÃ©</h2>

    <% end %>

      <div class="row">

        <% @restaurants.each do |restaurant|%>

          <div class="col-xs-12 col-sm-4">

            <%= link_to restaurant_path(restaurant), class: "card-link" do %>

                <div class="card-company">

                  <div class="card-company-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= restaurant.photo.nil? ? "" : (cl_image_path restaurant.photo.public_id, width: 100, height: 100, crop: :fill) %>);"></div>

                  <h2 class="card-company-name"><%= restaurant.name %></h2>

                </div>

            <% end %>

          </div>

        <% end %>

    </div>
  </div>
</div>
