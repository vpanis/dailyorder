<div class="container">

  <div class="box">

    <h2 class="text-center head">Profil fournisseur</h2>

    <div class="text-center btn-order">
      <%= link_to "Ajouter un fournisseur", new_restaurant_path, class: "btn btn-success" %>
    </div>

    <% if @profiles.first.nil? %>

      <h3 class="text-center" style="margin-top: 20px;">Aucun établissement répertorié</h3>

    <% end %>

      <div class="row">

        <% @profiles.each do |profile|%>

          <div class="col-xs-12 col-sm-4">

            <%= link_to supplier_path(profile.supplier), class: "card-link" do %>

                <div class="card-company">

                  <div class="card-company-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= profile.supplier.photo.nil? ? "" : (cl_image_path profile.supplier.photo.public_id, width: 100, height: 100, crop: :fill) %>);"></div>

                  <h2 class="card-company-name"><%= profile.supplier.name %></h2>

                </div>

            <% end %>

          </div>

        <% end %>

    </div>
  </div>
</div>
