<div class="container">

  <div class="box">

      <h2 class="text-center">Résultats de recherche</h2>


    <% if @products.first.nil? %>

      <h2 class="text-center">Aucun produit ne correspond à votre recherche</h2>

    <% end %>

      <div class="row">

        <% @products.each do |product|%>

          <div class="col-xs-12 col-sm-4">

            <h2 class="card-company-name"><%= product.name %></h2>

          </div>

        <% end %>

    </div>
  </div>
</div>
